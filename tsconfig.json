{
  "compilerOptions": {
    "outDir": "build",
    "rootDir": "src",

    /* Language and Environment */
    "target": "es2016",

    /* Modules */
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true /* Ensure that casing is correct in imports. */,

    "noImplicitReturns": false,

    /* Type Checking */
    "strict": true,
    "skipLibCheck": true
  }
}
